<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cs188.drakeactivities.EventDescription">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/hello_blank_fragment" />

    <android.support.design.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/viewA"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.36"
                android:background="@color/colorPrimaryDark"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/imageView"
                    android:layout_weight="1" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/viewB"
                android:layout_width="match_parent"
                android:layout_height="82dp"
                android:background="@android:color/background_light"
                android:orientation="horizontal">

                <TextView
                    android:text="If you have selected an event this is a bug."
                    android:layout_width="325dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/EventTitle"
                    android:textColor="@android:color/black"
                    android:textSize="25sp"
                    android:textStyle="normal|bold" />
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/Description"
                android:layout_weight="0.48"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text="If you have selected an event this is a bug." />

            <EditText
                android:layout_width="168dp"
                android:layout_height="wrap_content"
                android:inputType="textCapCharacters"
                android:text="Enter Code Here"
                android:ems="10"
                android:id="@+id/eventCode"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="@android:color/darker_gray" />

            <TextView
                android:text="Points Awarded"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/pointsAwarded"
                android:textColor="@android:color/black"
                android:textSize="30sp"
                android:paddingLeft="25dp"
                android:visibility="gone" />

            <Button
                android:text="ENTER"
                android:layout_width="174dp"
                android:layout_height="34dp"
                android:id="@+id/enterCode"
                android:layout_marginLeft="25dp"
                android:background="@android:color/holo_orange_light"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp" />


        </LinearLayout>


        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:clickable="true"
            app:layout_anchor="@id/viewA"
            app:layout_anchorGravity="bottom|right|end"
            app:backgroundTint="@android:color/holo_orange_light"
            android:background="@android:drawable/ic_menu_my_calendar"
            android:src="@android:drawable/ic_menu_my_calendar" />

    </android.support.design.widget.CoordinatorLayout>
</FrameLayout>
